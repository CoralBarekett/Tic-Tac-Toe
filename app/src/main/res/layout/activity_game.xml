<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameBoard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/game_activity_tic_tac_toe_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/tic_tac_toe"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/game_activity_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Player X's turn"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_activity_tic_tac_toe_textView" />

    <!-- First Row -->
    <Button
        android:id="@+id/game_activity_top_left_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text=""
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/game_activity_top_center_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_activity_status_textView" />

    <Button
        android:id="@+id/game_activity_top_center_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text=""
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/game_activity_top_right_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/game_activity_top_left_button"
        app:layout_constraintTop_toTopOf="@+id/game_activity_top_left_button" />

    <Button
        android:id="@+id/game_activity_top_right_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="32dp"
        android:text=""
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/game_activity_top_center_button"
        app:layout_constraintTop_toTopOf="@+id/game_activity_top_center_button" />

    <!-- Second Row -->
    <Button
        android:id="@+id/game_activity_middle_left_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/game_activity_top_left_button"
        app:layout_constraintStart_toStartOf="@+id/game_activity_top_left_button"
        app:layout_constraintTop_toBottomOf="@+id/game_activity_top_left_button" />

    <Button
        android:id="@+id/game_activity_middle_center_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/game_activity_top_center_button"
        app:layout_constraintStart_toStartOf="@+id/game_activity_top_center_button"
        app:layout_constraintTop_toTopOf="@+id/game_activity_middle_left_button" />

    <Button
        android:id="@+id/game_activity_middle_right_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/game_activity_top_right_button"
        app:layout_constraintStart_toStartOf="@+id/game_activity_top_right_button"
        app:layout_constraintTop_toTopOf="@+id/game_activity_middle_center_button" />

    <!-- Third Row -->
    <Button
        android:id="@+id/game_activity_bottom_left_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/game_activity_middle_left_button"
        app:layout_constraintStart_toStartOf="@+id/game_activity_middle_left_button"
        app:layout_constraintTop_toBottomOf="@+id/game_activity_middle_left_button" />

    <Button
        android:id="@+id/game_activity_bottom_center_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/game_activity_middle_center_button"
        app:layout_constraintStart_toStartOf="@+id/game_activity_middle_center_button"
        app:layout_constraintTop_toTopOf="@+id/game_activity_bottom_left_button" />

    <Button
        android:id="@+id/game_activity_bottom_right_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/game_activity_middle_right_button"
        app:layout_constraintStart_toStartOf="@+id/game_activity_middle_right_button"
        app:layout_constraintTop_toTopOf="@+id/game_activity_bottom_center_button" />

    <Button
        android:id="@+id/game_activity_play_again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:padding="16dp"
        android:text="Play Again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_activity_bottom_center_button" />

</androidx.constraintlayout.widget.ConstraintLayout>